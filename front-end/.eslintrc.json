{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "document": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    "no-console": "warn",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-trailing-spaces": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "warn"
  }
}
